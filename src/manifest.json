{
  "manifest_version": 2,

  "name": "GitHub Star Tagger",
  "description": "Tag your starred GitHub projects",
  "version": "0.1",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "GitHub Star Tagger"
  },

  "background": {
    "scripts": ["common.js", "background.js"]
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://github.com/stars"
  ]
}